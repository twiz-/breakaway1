<div class="page-header">
  <h1>Latest Videos Posted</h1>
</div>  
<br><br>

<% @listings.each do |listing| %>
 <div class="well listing span3">
    <%= youtube_thumb_embed(listing.video).html_safe %>
    <small><%="Added " + time_ago_in_words(listing.created_at) + " ago" %></small><br>
    <span style="padding-top:-20px;"><%= listing.user.current_club %></span>
    <div class="meta">
       <%=link_to listing.user.full_name, profile_path(listing.user) %> |
      <span class="admin">
        <%= link_to "Edit", edit_listing_path(listing) %> |
        <%= link_to "Delete",listing, method: :delete, data:{confirm: "This cannot be undone"} %>
      </span>
    </div>
    <%= link_to "Add fav", new_user_friendship_path(friend_id: listing.user),class: "btn btn-mini btn-warning" %>
 </div>
<% end %>
