<h2>Sign up</h2>

<%= form_for(@user, :as => :user, :url => registration_path(@user)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :user_type, 'Register As' %>
    <%= f.select :user_type, [['Player', 'player'], ['Coach', 'coach']] %>
  </div>

  <div><%= f.label :current_club %>
    <%= f.text_field :current_club %>
  </div>
  <div><%= f.label :current_formation %>
    <%= f.select(:system_formation,[['4-3-3'],['4-4-2'],['3-4-3'],['4-5-1'],['3-2-1'],['4-3-3']]) %>
  </div>
  <div><%= f.label :incoming_class_year %>
    <%= f.select(:incoming_year,[['2014'],['2015'],['2016'],['2017'],['2018'],['2019']]) %>
  </div>
  <div><%= f.label :position %>
    <%= f.radio_button :postion, 'striker' %> Striker<br>
    <%= f.radio_button :postion, 'defender' %> Defender<br>
    <%= f.radio_button :postion, 'Mid' %> Mid<br>
  </div>
  <div><%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>
  <div><%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>
  <div><%= f.label :profile_name %>
    <%= f.text_field :profile_name %>
  </div>
  <div><%= f.label :email %>
  <%= f.email_field :email %></div>

  <div><%= f.label :password %>
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
